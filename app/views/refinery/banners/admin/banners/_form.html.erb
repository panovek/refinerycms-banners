<%= form_for [refinery, :banners_admin, @banner] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @banner,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link, :class => 'widest' -%>
  </div>

  <div class='field'>
    <%= f.label :banner_type -%>
    <%= f.select :banner_type, Refinery::Banners::Banner::banner_types.keys, :class => "larger widest" -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
      :f => f,
      :field => :image_id,
      :image => @banner.image,
      :toggle_image_display => true -%>
  </div>

  <% if @banner.image.present? %>
    <% if @banner.banner_type == 'большой' %>
        <div class='field'>
          <%= f.label "Цвет фона для баннера" -%>
          <%= f.text_field :background_color, id: 'background-color', style: "padding-left: 25px; height: 26px;" -%>
        </div>
    <% end %>
    <div class='field'>
      <%= f.label "Примерный вид баннера" -%>
      <div id="example-banner" style="text-align: center; height: <%= Refinery::Banners::Banner::OPTIONS[Refinery::Banners::Banner.banner_types[@banner.banner_type]][:height] %>px; <%= @banner.banner_type == 'большой' ? ('background-color: ' + (@banner.background_color.present? ? @banner.background_color : '') + ';') : '' %>">
        <%= image_tag @banner.image.url, width: Refinery::Banners::Banner::OPTIONS[Refinery::Banners::Banner.banner_types[@banner.banner_type]][:width], height: Refinery::Banners::Banner::OPTIONS[Refinery::Banners::Banner.banner_types[@banner.banner_type]][:height] %>
      </div>
    </div>

  <% end %>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
      :f => f,
      :fields => [:description],
      :object => "banners/banner" -%>
  </div>

    <div class='field'>
      <%= f.label :start_date -%>
      <%= f.datetime_select :start_date, :include_blank => false, :ampm => true -%>
    </div>

    <div class='field'>
      <%= f.label :expiry_date -%>
      <%= f.datetime_select :expiry_date, :include_blank => true, :ampm => true -%>
    </div>

    </br>
    <div class='field'>
      <%= f.check_box :is_active, :checked => @banner.new_record? ? true : @banner[:is_active] %>
      <%= f.label :is_active, :class => 'input_label' %>
    </div>


    <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.banners.admin.banners.banner'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @banner.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
      $('#background-color').minicolors({
        opacity: false,
        change: function(hex, opacity) {
            $('#example-banner').css("background-color", $('#background-color').minicolors('rgbaString'));
        }
      });
    });
  </script>
<% end -%>
